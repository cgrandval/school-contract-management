{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Number</th>
                <td>{{ contract.number }}</td>
            </tr>
            <tr>
                <th>HourlyRate</th>
                <td>{{ contract.hourlyRate }}</td>
            </tr>
            <tr>
                <th>Signed</th>
                <td>{{ contract.signed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>OnServer</th>
                <td>{{ contract.onServer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>InIntranet</th>
                <td>{{ contract.inIntranet ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('contract_edit', {'id': contract.id}) }}">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
{% endblock %}
